<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/layout_menu"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_to_how"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/button_to_score"
        android:layout_alignRight="@+id/button_to_score"
        android:layout_below="@+id/button_to_score"
        android:background="@drawable/howtoplay_button" />

    <Button
        android:id="@+id/button_to_quit"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/button_to_how"
        android:layout_alignRight="@+id/button_to_how"
        android:layout_below="@+id/button_to_how"
        android:background="@drawable/quit_button" />

    <Button
        android:id="@+id/button_to_option"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/button_to_play"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:layout_alignRight="@+id/button_to_play"
        android:layout_below="@+id/button_to_play"
        android:background="@drawable/options_button" />

    <Button
        android:id="@+id/button_to_score"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/button_to_option"
        android:layout_alignRight="@+id/button_to_option"
        android:layout_below="@+id/button_to_option"
        android:background="@drawable/highscore_button" />

    <TextView
        android:id="@+id/correct_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="@drawable/main_menu"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="true" />

    <Button
        android:id="@+id/button_to_play"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/correct_out"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/play_button" />

</RelativeLayout>